{
  "compilerOptions": {
    "declaration": true,
    "module": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "nodenext",
    "typeRoots": ["./types", "./node_modules/@types"],
    "composite": true
  },
  "include": ["./types/**/*.d.ts", "./src/**/*"],
  "ts-node": {
    "esm": true
  }
}
